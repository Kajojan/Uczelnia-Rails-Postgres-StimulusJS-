<div class="border p-4 rounded shadow hover:shadow-lg transition">
  <h2 class="text-xl font-semibold"><%= course.name %></h2>
  <p class="text-gray-600"><%= course.code %></p>
  <p class="mt-2 text-sm text-gray-500">
    Nauczyciel:
    <%= course.teacher&.first_name %> <%= course.teacher&.last_name %>
  </p>

  <%= link_to "Szczegóły",
      course_path(course),
      class: "mt-3 inline-block text-blue-500 hover:underline" %>
</div>
